#!/bin/sh
# preinst script for ros-kinetic-roslaunch-patched
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <new-preinst> `install'
#        * <new-preinst> `install' <old-version>
#        * <new-preinst> `upgrade' <old-version>
#        * <old-preinst> `abort-upgrade' <new-version>
# for details, see https://www.debian.org/doc/debian-policy/ or
# the debian-policy package

diversion_added_version=1.0.0
this_version=1.0.1

config_file='/opt/ros/kinetic/lib/python2.7/dist-packages/roslaunch/config.py'

if
        test "$1" = install ||
        dpkg --compare-versions "$2" lt "$diversion_added_version" ||
        dpkg --compare-versions "$this_version" lt "$2"
then
        dpkg-divert --package ros-kinetic-roslaunch-patched --divert $config_file.original --rename $config_file
fi

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
